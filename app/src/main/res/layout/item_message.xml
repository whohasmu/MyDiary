<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_message_layoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout

        android:id="@+id/item_message_layoutDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/item_message_profile"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView

            android:id="@+id/item_messageTxtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="이름" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/messageItem_textview_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메시지" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/readCounter_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text=" "
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="9dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/messageItem_textview_timetamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@android:color/darker_gray"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/readCounter_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text=" "
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="9dp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>